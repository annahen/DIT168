<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">


    <ImageView fx:id="forward" GridPane.columnIndex="2" GridPane.rowIndex="1" onMousePressed="#forwardPressed"
               onMouseReleased="#forwardRelease" >
        <image>
            <Image url="@forwardImg.png"></Image>
        </image>
    </ImageView>

    <ImageView fx:id="left" GridPane.columnIndex="1" GridPane.rowIndex="2" onMousePressed="#leftPressed"
               onMouseReleased="#leftRelease">
        <image>
            <Image url="@leftImg.png"></Image>
        </image>
    </ImageView>

    <ImageView fx:id="right" GridPane.columnIndex="3" GridPane.rowIndex="2" onMousePressed="#rightPressed"
               onMouseReleased="#rightRelease">
        <image>
            <Image url="@rightImg.png"></Image>
        </image>
    </ImageView>


    <ImageView fx:id="reverse" GridPane.columnIndex="2" GridPane.rowIndex="3" onMousePressed="#reversePressed"
               onMouseReleased="#reverseRelease">
        <image>
            <Image url="@reverseImg.png"></Image>
        </image>
    </ImageView>

    <ImageView fx:id="stopCar" GridPane.columnIndex="2" GridPane.rowIndex="2" onMousePressed="#stopCar"
               onMouseReleased="#notStop">
        <image>
            <Image url="@stopButton.png"></Image>
        </image>
    </ImageView>



</GridPane>